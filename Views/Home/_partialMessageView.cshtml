@{
}
@model Tuple<Message,TextTranslator, Profile>
@* @model Message *@
@* @translator TextTranslator *@

@if (Model.Item1 == null)
{
    <h2>No message provided</h2>
}
else
{
    if (Model.Item2 != null)
    {
        <h3>@Model.Item1.Profile.User.UserName</h3>
        <h3>Original Language @Model.Item1.Profile.Language</h3>
        <h3>@Model.Item2.translateToPassedIn(Model.Item1.Contents, Model.Item1.Profile.Language).Result</h3>
    }
    else
    {
        <h3>@Model.Item1.Profile.User.UserName</h3>
        <h3>Original Language @Model.Item1.Profile.Language</h3>
        <h3>@Model.Item1.Contents</h3>
    }
}


