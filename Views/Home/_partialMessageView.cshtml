@using Microsoft.AspNetCore.Identity;
@model (Message message, TextTranslator tt, IdentityUser user, Profile prof)

@{
	//
}

@if (Model.message == null) {
	<h2>No message provided</h2>
}
else {
	if (Model.tt != null) {
		<div class="border border-5 border-primary rounded">
			<div class="mx-3" style="clear: both">
				<h3 style="float: left">@Model.message.username</h3>
				<h4 style="display: inline-block" class="ogLanguage mx-3" >Original Language @Model.message.language</h4>
			</div>
			<br />
			<h3 class="mx-3">@Model.tt.translateToPassedIn(Model.message.Contents, Model.prof.Language).Result</h3>
		</div>
		<br />
	}
	else {
		<div class="border border-5 border-primary">
			<h3>@Model.user.UserName</h3>
			<h3 class="ogLanguage">Original Language @Model.prof.Language</h3>
			<br />
			<h3>@Model.message.Contents</h3>
		</div>
		<br />
	}
}


